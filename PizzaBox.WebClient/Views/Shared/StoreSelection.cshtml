@model PizzaBox.WebClient.Models.StoreViewModel
<h2>Select a Store:</h2><br>
<form asp-action="StoreSelection" asp-controller="Store" asp-antiforgery="true" method="POST">
  @foreach (var item in Model.Stores)
  {
    <input type="radio" asp-for="@Model.Name" value="@item">
    <label for="@item">@item</label>
    <br>
  }
  <button type="submit" class ="button" >Select</button>
</form>


