@model PizzaBox.WebClient.Models.StoreViewModel


<h5>View Order History:</h5>
<form asp-action="HistorySelection" asp-controller="Store" asp-antiforgery="true" method="GET">
<input name = "Name" value = "@Model.Name" hidden = "true">
  <button type="submit" class ="button" >Order History</button>
</form>
<br>
<h5>View Sales Report:</h5>
<form asp-action="SalesSelection" asp-controller="Store" asp-antiforgery="true" method="GET">
  <input name = "Name" value = "@Model.Name" hidden = "true">
  <button type="submit" class ="button" >Sales Report</button>
</form>

